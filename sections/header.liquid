<header class="sticky top-0 z-50 bg-white/98 backdrop-blur-md border-b border-[#E5E5E5] px-6 py-6 md:px-12 md:py-6 flex justify-between items-center transition-all bg-opacity-98">
  
  <!-- Logo -->
  <a href="/" class="text-xl font-bold tracking-[0.02em] text-brand-dark no-underline bg-transparent border-none cursor-pointer z-50 relative">
    PAY THE DØLLS™
  </a>

  <!-- Desktop Navigation -->
  <nav class="hidden md:flex gap-8 text-[13px] font-medium tracking-[0.05em]">
    {% if section.settings.menu.links.size > 0 %}
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" class="{% if link.active %}text-brand-neon{% else %}text-brand-dark{% endif %} hover:text-brand-neon transition-colors duration-200 bg-transparent border-none cursor-pointer no-underline uppercase">
          {{ link.title }}
        </a>
      {% endfor %}
    {% else %}
      <a href="/collections/all" class="{% if request.path contains '/collections' %}text-brand-dark{% else %}text-brand-dark{% endif %} hover:text-brand-neon transition-colors duration-200 bg-transparent border-none cursor-pointer no-underline uppercase">
        SHOP
      </a>
      <a href="/pages/brands" class="{% if request.path contains '/pages/brands' %}text-brand-neon{% else %}text-brand-dark{% endif %} hover:text-brand-neon transition-colors duration-200 bg-transparent border-none cursor-pointer no-underline uppercase">
        BRANDS
      </a>
      <a href="/pages/verse-capital" class="{% if request.path contains '/pages/verse' %}text-brand-neon{% else %}text-brand-dark{% endif %} hover:text-brand-neon transition-colors duration-200 bg-transparent border-none cursor-pointer no-underline uppercase">
        VERSE
      </a>
      <a href="/pages/mission" class="{% if request.path contains '/pages/mission' %}text-brand-neon{% else %}text-brand-dark{% endif %} hover:text-brand-neon transition-colors duration-200 bg-transparent border-none cursor-pointer no-underline uppercase">
        MISSION
      </a>
      <a href="/pages/submit" class="{% if request.path contains '/pages/submit' %}text-brand-neon{% else %}text-brand-dark{% endif %} hover:text-brand-neon transition-colors duration-200 bg-transparent border-none cursor-pointer no-underline uppercase">
        SUBMIT
      </a>
      <a href="/pages/about" class="{% if request.path contains '/pages/about' %}text-brand-neon{% else %}text-brand-dark{% endif %} hover:text-brand-neon transition-colors duration-200 bg-transparent border-none cursor-pointer no-underline uppercase">
        ABOUT
      </a>
      <a href="/pages/contact" class="{% if request.path contains '/pages/contact' %}text-brand-neon{% else %}text-brand-dark{% endif %} hover:text-brand-neon transition-colors duration-200 bg-transparent border-none cursor-pointer no-underline uppercase">
        CONTACT
      </a>
    {% endif %}
  </nav>

  <!-- Right Actions -->
  <div class="flex items-center gap-4 text-[13px] text-brand-dark">
    
    <!-- ZO ACTIVE Pill (Only on Studio Zo page) -->
    {% if template.suffix == 'studiozo' %}
      <span class="text-xs border border-black px-2 py-1 rounded-full flex items-center hidden md:flex">
        <span class="w-2 h-2 bg-black rounded-full mr-2"></span>
        ZO ACTIVE
      </span>
    {% endif %}

    <!-- Cart -->
    <a href="/cart" class="no-underline hover:text-brand-neon transition-colors text-brand-dark font-medium">
      Cart ({% if cart.item_count > 0 %}{{ cart.item_count }}{% else %}0{% endif %})
    </a>

    <!-- Mobile Menu Button (Hamburger) -->
    <button id="MobileMenuToggle" class="md:hidden z-50 relative bg-transparent border-none cursor-pointer p-0 ml-2" aria-label="Toggle Menu">
      <div class="flex flex-col gap-1.5 w-6">
        <span class="w-full h-0.5 bg-black transition-all duration-300 origin-center"></span>
        <span class="w-full h-0.5 bg-black transition-all duration-300 origin-center"></span>
        <span class="w-full h-0.5 bg-black transition-all duration-300 origin-center"></span>
      </div>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div id="MobileMenu" class="fixed inset-0 bg-white z-40 flex-col items-center justify-center gap-8 transition-transform duration-300 translate-x-full md:hidden flex h-screen w-screen">
    <nav class="flex flex-col items-center gap-8 text-center">
      {% if section.settings.menu.links.size > 0 %}
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="mobile-link text-2xl font-bold uppercase tracking-[0.05em] text-brand-dark no-underline hover:text-brand-neon transition-transform hover:scale-110">
            {{ link.title }}
          </a>
        {% endfor %}
      {% else %}
        <a href="/collections/all" class="mobile-link text-2xl font-bold uppercase tracking-[0.05em] text-brand-dark no-underline hover:text-brand-neon transition-transform hover:scale-110">Shop</a>
        <a href="/pages/brands" class="mobile-link text-2xl font-bold uppercase tracking-[0.05em] text-brand-dark no-underline hover:text-brand-neon transition-transform hover:scale-110">Brands</a>
        <a href="/pages/verse-capital" class="mobile-link text-2xl font-bold uppercase tracking-[0.05em] text-brand-dark no-underline hover:text-brand-neon transition-transform hover:scale-110">Verse</a>
        <a href="/pages/mission" class="mobile-link text-2xl font-bold uppercase tracking-[0.05em] text-brand-dark no-underline hover:text-brand-neon transition-transform hover:scale-110">Mission</a>
        <a href="/pages/submit" class="mobile-link text-2xl font-bold uppercase tracking-[0.05em] text-brand-dark no-underline hover:text-brand-neon transition-transform hover:scale-110">Submit</a>
        <a href="/pages/about" class="mobile-link text-2xl font-bold uppercase tracking-[0.05em] text-brand-dark no-underline hover:text-brand-neon transition-transform hover:scale-110">About</a>
        <a href="/pages/contact" class="mobile-link text-2xl font-bold uppercase tracking-[0.05em] text-brand-dark no-underline hover:text-brand-neon transition-transform hover:scale-110">Contact</a>
      {% endif %}
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('MobileMenuToggle');
    const menu = document.getElementById('MobileMenu');
    const spans = toggle.querySelectorAll('span');
    const links = document.querySelectorAll('.mobile-link');
    let isOpen = false;

    toggle.addEventListener('click', () => {
      isOpen = !isOpen;
      
      // Toggle Menu Visibility
      if (isOpen) {
        menu.classList.remove('translate-x-full');
        document.body.style.overflow = 'hidden'; // Lock Scroll
        
        // Animate Hamburger to X
        spans[0].style.transform = 'rotate(45deg) translateY(6px)';
        spans[1].style.opacity = '0';
        spans[2].style.transform = 'rotate(-45deg) translateY(-6px)';
      } else {
        menu.classList.add('translate-x-full');
        document.body.style.overflow = ''; // Unlock Scroll
        
        // Reset Hamburger
        spans[0].style.transform = 'none';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'none';
      }
    });

    // Close menu when a link is clicked
    links.forEach(link => {
      link.addEventListener('click', () => {
        isOpen = false;
        menu.classList.add('translate-x-full');
        document.body.style.overflow = '';
        spans[0].style.transform = 'none';
        spans[1].style.opacity = '1';
        spans[2].style.transform = 'none';
      });
    });
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
