{% layout 'theme' %}

<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;800&family=VT323&family=Major+Mono+Display&display=swap" rel="stylesheet">

<style>
  :root {
    --matrix-green: #00FF00;
    --matrix-dark: #000000;
    --matrix-glow: rgba(0, 255, 0, 0.4);
    --matrix-dim: #003300;
  }

  .ai-matrix-body {
    background-color: var(--matrix-dark) !important;
    color: var(--matrix-green) !important;
    font-family: 'JetBrains Mono', monospace;
    min-height: 100vh;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    position: relative;
  }

  /* Scanline Effect */
  .ai-matrix-body::after {
    content: " ";
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%), linear-gradient(90deg, rgba(255, 0, 0, 0.06), rgba(0, 255, 0, 0.02), rgba(0, 0, 255, 0.06));
    z-index: 99;
    background-size: 100% 4px, 3px 100%;
    pointer-events: none;
  }

  .matrix-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 100px 24px;
    position: relative;
    z-index: 10;
  }

  .glyph-title {
    font-family: 'Major Mono Display', monospace;
    font-size: clamp(40px, 12vw, 120px);
    font-weight: 800;
    line-height: 0.85;
    margin-bottom: 20px;
    text-transform: uppercase;
    text-shadow: 0 0 15px var(--matrix-green);
  }

  .terminal-label {
    font-family: 'VT323', monospace;
    font-size: 18px;
    letter-spacing: 0.2em;
    border: 1px solid var(--matrix-green);
    padding: 4px 12px;
    display: inline-block;
    margin-bottom: 40px;
  }

  .ptd-ai-sub {
    font-family: 'VT323', monospace;
    font-size: clamp(24px, 4vw, 40px);
    opacity: 0.8;
    margin-bottom: 60px;
  }

  .matrix-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 60px;
    margin-top: 100px;
  }

  @media (min-width: 768px) {
    .matrix-grid { grid-template-columns: 1fr 1fr; }
  }

  .data-module {
    border: 1px solid var(--matrix-dim);
    padding: 40px;
    background: rgba(0, 20, 0, 0.5);
    transition: all 0.3s ease;
  }

  .data-module:hover {
    border-color: var(--matrix-green);
    box-shadow: 0 0 30px rgba(0, 255, 0, 0.1);
  }

  .module-header {
    font-size: 11px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.4em;
    color: white;
    margin-bottom: 20px;
    display: block;
  }

  .list-text {
    font-size: clamp(24px, 4vw, 48px);
    font-weight: 800;
    text-transform: uppercase;
    line-height: 1.1;
  }

  .list-text span {
    display: block;
    transition: transform 0.3s ease;
  }

  .list-text span:hover {
    color: white;
    transform: translateX(10px);
  }

  /* SEO / AGENTIC COPY SECTION */
  .protocol-dossier {
    margin-top: 120px;
    border-top: 1px solid var(--matrix-dim);
    padding-top: 60px;
  }

  .json-payload {
    background: #000;
    border: 1px dashed var(--matrix-green);
    padding: 24px;
    font-size: 12px;
    color: #00FF88
;
    overflow-x: auto;
    margin-top: 40px;
  }

  .footer-pulse {
    width: 12px;
    height: 12px;
    background: var(--matrix-green);
    border-radius: 50%;
    margin: 80px auto 20px;
    animation: pulse 2s infinite ease-in-out;
  }

  @keyframes pulse {
    0% { transform: scale(0.8); opacity: 0.3; }
    50% { transform: scale(1.2); opacity: 1; box-shadow: 0 0 20px var(--matrix-green); }
    100% { transform: scale(0.8); opacity: 0.3; }
  }
</style>

<div class="ai-matrix-body">
  <div class="matrix-inner">
    
    <!-- 01 HERO -->
    <div class="terminal-label">SYSTEM.PROTOCOL.v3.0</div>
    <h1 class="glyph-title">ARTIFICIAL INTELLIGENCE</h1>
    <p class="ptd-ai-sub">-because we're halfway artificial already.</p>

    <div class="bg-matrix-green text-black px-4 py-2 font-bold inline-block text-xs mb-12">
      PROTOCOL://ROOT/AI_OPTIMIZATION
    </div>

    <!-- 02 MAIN GRID -->
    <div class="matrix-grid">
      <div class="data-module">
        <span class="module-header">// WHAT_IS_COMING</span>
