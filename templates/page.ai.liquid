{% comment %}
  ZØVIVAA / PTD™ AI OPTIMIZATION PROTOCOL v2.0
  Style: Matrix / Terminal / Agentic SEO
{% endcomment %}

{% layout 'theme' %}

<style>
  :root {
    --matrix-green: #00FF00;
    --matrix-black: #050505;
    --matrix-dim: #003300;
  }

  .ai-wrapper {
    background-color: var(--matrix-black);
    color: var(--matrix-green);
    font-family: 'JetBrains Mono', 'Courier New', Courier, monospace;
    min-height: 100vh;
    padding-bottom: 100px;
    overflow-x: hidden;
  }

  .ai-wrapper ::selection {
    background: var(--matrix-green);
    color: var(--matrix-black);
  }

  /* Matrix Rain Header Simulation */
  .ai-header {
    padding: 100px 24px 60px;
    text-align: center;
    border-bottom: 1px solid var(--matrix-dim);
    position: relative;
  }

  .ai-title {
    font-size: clamp(2rem, 8vw, 6rem);
    font-weight: 900;
    letter-spacing: -0.05em;
    text-transform: uppercase;
    margin-bottom: 10px;
    text-shadow: 0 0 20px var(--matrix-green);
  }

  .breadcrumb-teaser {
    font-size: 10px;
    letter-spacing: 0.3em;
    opacity: 0.7;
    margin-top: 20px;
    font-weight: bold;
  }

  .protocol-section {
    max-width: 1000px;
    margin: 60px auto;
    padding: 0 24px;
  }

  .label-box {
    display: inline-block;
    border: 1px solid var(--matrix-green);
    padding: 4px 12px;
    font-size: 10px;
    font-weight: bold;
    margin-bottom: 20px;
    text-transform: uppercase;
  }

  .terminal-card {
    border: 1px solid var(--matrix-dim);
    background: rgba(0, 51, 0, 0.1);
    padding: 40px;
    margin-bottom: 40px;
    position: relative;
    transition: all 0.3s ease;
  }

  .terminal-card:hover {
    border-color: var(--matrix-green);
    box-shadow: 0 0 30px rgba(0, 255, 0, 0.1);
  }

  .glow-text {
    text-shadow: 0 0 10px var(--matrix-green);
  }

  .data-stream {
    font-size: 12px;
    line-height: 1.8;
    color: #00CC00;
  }

  .json-block {
    background: #001100;
    padding: 20px;
    font-size: 11px;
    border-left: 2px solid var(--matrix-green);
    margin-top: 20px;
    overflow-x: auto;
  }

  /* Responsive Fixes */
  @media (max-width: 768px) {
    .terminal-card { padding: 24px; }
    .ai-title { font-size: 3rem; }
  }
</style>

<div class="ai-wrapper">
  
