<!-- PAY THE DØLLS — Shop Structure [CORRECTED HANDLES] -->
<div class="bg-white min-h-screen text-black font-sans selection:bg-black selection:text-white">
  <div class="max-w-[1400px] mx-auto py-24 px-6 md:px-12">
    
    <header class="mb-16 text-center max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-7xl font-bold uppercase tracking-tight mb-6">PAY THE DØLLS™ — Shop</h1>
      <h2 class="text-xl md:text-2xl font-medium uppercase tracking-widest mb-8 border-b border-black pb-4 inline-block">The house brand. Secure the bag.</h2>
      
      <nav class="flex flex-wrap justify-center gap-4 mb-12">
        <a href="#apparel" class="px-6 py-3 border border-black uppercase font-bold tracking-widest text-xs hover:bg-black hover:text-white transition-all duration-300">Apparel</a>
        <a href="#accessories" class="px-6 py-3 border border-black uppercase font-bold tracking-widest text-xs hover:bg-black hover:text-white transition-all duration-300">Accessories</a>
        <a href="#artifacts" class="px-6 py-3 border border-black uppercase font-bold tracking-widest text-xs hover:bg-black hover:text-white transition-all duration-300">Artifacts</a>
        <a href="#art" class="px-6 py-3 border border-black uppercase font-bold tracking-widest text-xs hover:bg-black hover:text-white transition-all duration-300">Art</a>
        <a href="#aura" class="px-6 py-3 border border-black uppercase font-bold tracking-widest text-xs hover:bg-black hover:text-white transition-all duration-300">Aura</a>
      </nav>

      <div class="w-16 h-px bg-black mx-auto mb-12"></div>
      <p class="text-[#666] text-lg font-light leading-relaxed max-w-2xl mx-auto italic text-center">
        "All profit fuels Verse Capital. Create without Permission. Profit without Limit."
      </p>
    </header>

    {% assign source_collection = collections['all'] %}
    <div class="space-y-32">

      <!-- APPAREL -->
      <section id="apparel" class="ptd-section scroll-mt-32">
        <div class="flex items-end justify-between border-b border-black mb-12 pb-4">
           <h3 class="text-5xl font-bold uppercase tracking-tighter">Apparel</h3>
           <a href="/collections/paythedolls-apparel" class="text-xs font-mono uppercase tracking-widest underline decoration-1 underline-offset-4 hover:bg-black hover:text-white px-2 py-1 transition-colors">View All</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-px gap-y-px bg-gray-200 border border-gray-200">
          {% assign count = 0 %}
          {% for product in source_collection.products %}
            {% if product.tags contains 'apparel' %}
              {% assign count = count | plus: 1 %}
              <a href="{{ product.url }}" class="group bg-white relative aspect-[3/4] overflow-hidden block hover:z-10">
                 <div class="absolute inset-0"><img src="{{ product.featured_image | img_url: '800x' }}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" loading="lazy"/></div>
                 <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 flex flex-col justify-end p-6">
                    <div class="bg-white text-black p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-out">
                       <h4 class="font-bold uppercase tracking-tight text-lg">{{ product.title }}</h4>
                       <div class="flex justify-between items-center mt-2 border-t border-gray-100 pt-2"><span class="font-mono text-sm">{{ product.price | money }}</span><span class="text-[10px] uppercase tracking-widest bg-black text-white px-2 py-1">View</span></div>
                    </div>
                 </div>
              </a>
            {% endif %}
          {% endfor %}
          {% if count == 0 %}<div class="col-span-full py-12 text-center bg-gray-50 text-gray-500 font-mono text-sm uppercase tracking-widest">No products found in Apparel.</div>{% endif %}
        </div>
      </section>

