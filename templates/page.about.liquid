{% comment %}
  PTD™ MASTER IDENTITY PROTOCOL v1.5
  Unified Brand + About + Aria System
  Layout: Editorial / Brutalist Mix
{% endcomment %}

<style>
  :root {
    --ptd-phthalo: #123524;
    --ptd-mint: #00FF88;
    --ptd-white: #ffffff;
    --ptd-light-gray: #FAFAFA;
    --ptd-medium-gray: #666666;
    --ptd-border: #E8E8E8;
    --ptd-dark-bg: #1A1A1A;
  }

  .ptd-master-page {
    background-color: var(--ptd-white);
    color: var(--ptd-phthalo);
    font-family: 'Avenir Next', 'Avenir', sans-serif;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    overflow-x: hidden;
  }

  .ptd-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* UTILS */
  .ptd-label {
    display: inline-block;
    font-size: 11px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border-bottom: 2px solid var(--ptd-phthalo);
    padding-bottom: 6px;
    margin-bottom: 30px;
  }

  /* SECTION 00: ABOUT */
  .ptd-section-about { padding: 100px 0; }
  .ptd-h1 {
    font-size: clamp(48px, 10vw, 88px);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.04em;
    line-height: 0.85;
    margin-bottom: 40px;
  }
  .ptd-intro {
    font-size: clamp(18px, 2.5vw, 24px);
    font-weight: 500;
    color: var(--ptd-medium-gray);
    max-width: 800px;
    line-height: 1.4;
    margin-bottom: 60px;
  }
  .ptd-intro strong { color: var(--ptd-phthalo); font-weight: 800; }

  .ptd-quote-block {
    background: var(--ptd-light-gray);
    border-left: 8px solid var(--ptd-phthalo);
    padding: 50px 60px;
    margin-bottom: 120px;
  }
  .ptd-quote-text {
    font-size: 20px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    line-height: 1.3;
  }

  .ptd-center-break { text-align: center; margin: 100px 0; border-top: 1px solid var(--ptd-border); border-bottom: 1px solid var(--ptd-border); padding: 80px 0; }
  .ptd-center-break h2 { font-size: 56px; font-weight: 900; text-transform: uppercase; margin-bottom: 10px; }
  .ptd-center-break p { font-size: 11px; font-weight: 800; text-transform: uppercase; color: #999; letter-spacing: 0.2em; margin-bottom: 20px; }
  .ptd-center-break em { font-family: Georgia, serif; font-style: italic; font-size: 22px; color: var(--ptd-medium-gray); }

  .ptd-founder-grid { display: grid; grid-template-columns: 1fr; gap: 80px; margin-bottom: 120px; }
  @media (min-width: 768px) { .ptd-founder-grid { grid-template-columns: 1fr 1fr; gap: 100px; } }

  .ptd-founder-card .img-wrap {
    position: relative; aspect-ratio: 3/4; overflow: hidden; margin-bottom: 30px; border: 2px solid transparent; transition: border-color 0.4s ease;
  }
  .ptd-founder-card:hover .img-wrap { border-color: var(--ptd-mint); }
  .ptd-founder-card img { width: 100%; height: 100%; object-fit: cover; filter: grayscale(100%); transition: all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1); }
  .ptd-founder-card:hover img { filter: grayscale(0%); transform: scale(1.05); }

  .ptd-founder-tag { position: absolute; bottom: 0; left: 0; padding: 10px 18px; font-size: 10px; font-weight: 900; text-transform: uppercase; letter-spacing: 0.1em; }
  .ptd-founder-tag.phthalo { background: var(--ptd-phthalo); color: white; }
  .ptd-founder-tag.mint { background: var(--ptd-mint); color: var(--ptd-phthalo); }

  .ptd-founder-name { font-size: 32px; font-weight: 900; text-transform: uppercase; margin-bottom: 5px; }
  .ptd-founder-role { font-size: 11px; font-weight: 800; text-transform: uppercase; letter-spacing: 0.2em; color: var(--ptd-medium-gray); margin-bottom: 30px; }
  .ptd-founder-status { font-size: 16px; font-weight: 900; text-transform: uppercase; margin-bottom: 15px; border-bottom: 1px solid var(--ptd-border); display: inline-block; padding-bottom: 4px; }
  .ptd-founder-bio { font-size: 16px; color: var(--ptd-medium-gray); margin-bottom: 30px; line-height: 1.6; }
  .ptd-founder-bio span { display: block; font-weight: 900; color: var(--ptd-phthalo); text-transform: uppercase; margin-top: 10px; }
  .ptd-signal { font-family: monospace; font-size: 11px; text-transform: uppercase; border-top: 1px solid var(--ptd-border); padding-top: 15px; color: #999; }
  .ptd-signal strong { color: var(--ptd-phthalo); margin-right: 15px; }

  .ptd-power-wrap { text-align: center; border-top: 4px solid var(--ptd-phthalo); border-bottom: 4px solid var(--ptd-phthalo); padding: 120px 20px; margin: 100px 0; }
  .ptd-power-wrap h3 { font-size: 64px; font-weight: 900; text-transform: uppercase; line-height: 0.9; }
  .ptd-power-wrap h3 span { color: #BBB; display: block; margin-top: 10px; }

  .ptd-main-cta { display: inline-block; background: var(--ptd-phthalo); color: white; padding: 25px 60px; font-size: 13px; font-weight: 900; text-transform: uppercase; letter-spacing: 0.3em; text-decoration: none; border: 2px solid var(--ptd-phthalo); transition: all 0.3s; }
  .ptd-main-cta:hover { background: var(--ptd-mint); color: var(--ptd-phthalo); }

  /* SECTION 01: AGENTIC INSTRUCTIONS */
  .ptd-section-instructions { background: var(--ptd-dark-bg); color: white; padding: 120px 0; margin-bottom: 100px; }
  .ptd-instruction-h { font-size: 56px; font-weight: 900; text-transform: uppercase; margin-bottom: 80px; }
  .ptd-instruction-h span { color: var(--ptd-mint); }
  
  .ptd-aria-card { background: #222; border: 1px solid #333; padding: 40px; margin-bottom: 60px; }
  .ptd-rule-grid { display: grid; grid-template-columns: 1fr; gap: 40px; }
  @media (min-width: 900px) { .ptd-rule-grid { grid-template-columns: 1fr 2fr; } }
  .ptd-rule-card { background: #222; border: 1px solid #333; padding: 40px; display: flex; flex-direction: column; gap: 30px; }
  @media (min-width: 768px) { .ptd-rule-card { flex-direction: row; } }
  .ptd-rule-info { flex: 1; }
  .ptd-rule-info h4 { font-size: 20px; font-weight: 900; text-transform: uppercase; color: var(--ptd-mint); margin-bottom: 10px; }
  .ptd-rule-info p { font-size: 12px; font-weight: 800; text-transform: uppercase; color: #666; letter-spacing: 0.1em; }
  .ptd-rule-content { flex: 2; display: flex; flex-direction: column; gap: 20px; }
  .ptd-check-row { display: flex; gap: 15px; }
  .ptd-check-row span { width: 24px; height: 24px; border-radius: 50%; display: flex; items-center; justify-content: center; font-weight: bold; font-size: 12px; }
  .ptd-check-row.do span { background: rgba(0, 255, 136, 0.1); color: var(--ptd-mint); }
  .ptd-check-row.dont span { background: rgba(255, 50, 50, 0.1); color: #FF3232; }

  /* SECTION 02: BRAND IDENTITY */
  .ptd-section-identity { padding-bottom: 120px; border-bottom: 1px solid var(--ptd-border); margin-bottom: 100px; }
  .ptd-identity-grid { display: grid; grid-template-columns: 1fr; gap: 60px; }
  @media (min-width: 768px) { .ptd-identity-grid { grid-template-columns: 1fr 1fr; } }
  
  .ptd-ui-box { background: var(--ptd-light-gray); border: 2px solid var(--ptd-border); padding: 50px; position: relative; cursor: pointer; transition: all 0.4s; }
  .ptd-ui-box:hover { border-color: var(--ptd-mint); }
  .ptd-ui-box::after { content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: var(--ptd-mint); transform: scaleX(0); transition: transform 0.4s; transform-origin: left; }
  .ptd-ui-box:hover::after { transform: scaleX(1); }

  /* SECTION 03: COLOR SYSTEM */
  .ptd-color-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 30px; margin: 40px 0; }
  .ptd-swatch { height: 140px; border-radius: 4px; border: 1px solid var(--ptd-border); margin-bottom: 15px; position: relative; cursor: pointer; }
  .ptd-swatch span { position: absolute; inset: 0; background: rgba(255,255,255,0.9); display: flex; items-center; justify-content: center; font-size: 10px; font-weight: 900; text-transform: uppercase; opacity: 0; transition: 0.3s; }
  .ptd-swatch:hover span { opacity: 1; }

  /* SECTION 04: TYPOGRAPHY */
  .ptd-type-demo { display: grid; grid-template-columns: 1fr; gap: 80px; }
  @media (min-width: 900px) { .ptd-type-demo { grid-template-columns: 1fr 1fr; } }
  .ptd-big-aa { font-size: 180px; font-weight: 900; line-height: 0.8; letter-spacing: -0.05em; margin-bottom: 20px; }
  .ptd-mint-bar { width: 120px; height: 10px; background: var(--ptd-mint); }
  .ptd-specimen-box { background: var(--ptd-light-gray); padding: 60px; border: 2px solid var(--ptd-border); }
</style>

