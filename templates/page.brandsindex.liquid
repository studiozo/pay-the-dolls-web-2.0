    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 border-t border-l border-brand-border">
      
      <!-- Brand 1: PTD -->
      <a href="/pages/paythedolls" class="group cursor-pointer relative aspect-[3/4] overflow-hidden border-r border-b border-brand-border bg-white transition-all duration-300 hover:shadow-xl block">
          
          <!-- Background Image -->
          <div class="absolute inset-0 bg-cover bg-center transition-all duration-700 opacity-0 group-hover:opacity-100"
