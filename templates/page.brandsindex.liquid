{% layout 'theme' %}

<div class="bg-white min-h-screen text-black">
  <div class="brands-index max-w-[1400px] mx-auto py-32 px-6 md:px-12">
    <header class="mb-24 text-center">
      <h1 class="text-5xl md:text-8xl font-bold uppercase tracking-tight mb-6">
