{% layout 'theme' %}

<!-- PTD™ PITCH PROTOCOL -->
<!-- STYLE: Avenir / Off-White / Neon Green -->

<style>
  :root {
    --ptd-black: #000000;
    --ptd-white: #ffffff;
    --ptd-off-white: #FAFAFA;
    --ptd-neon: #00FF00;
    --ptd-border: #E5E5E5;
  }

  .submit-wrapper {
    background-color: var(--ptd-white);
    color: var(--ptd-black);
    min-height: 100vh;
    /* User Requested Font: Avenir */
    font-family: 'Avenir Next', 'Avenir', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .submit-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 80px 24px;
  }

  .section-title {
    font-size: 11px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-bottom: 2px solid var(--ptd-black);
    padding-bottom: 10px;
    margin-bottom: 30px;
  }

  /* INPUT STYLING - OFF WHITE & CLEAN */
  .field-group {
    margin-bottom: 24px;
  }

  .field-label {
    display: block;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 8px;
    color: #666;
  }

  .ptd-input {
    width: 100%;
    /* Force Off-White to override any dark theme defaults */
    background-color: var(--ptd-off-white) !important; 
    border: 1px solid var(--ptd-border) !important;
    padding: 16px;
    font-size: 14px;
    color: var(--ptd-black) !important;
    font-family: 'Courier New', Courier, monospace; /* Tech feel for data */
    border-radius: 0;
    appearance: none;
    transition: all 0.2s ease;
  }

  .ptd-input:focus {
    outline: none;
    background-color: #ffffff !important;
    border-color: var(--ptd-neon) !important;
    box-shadow: 0 0 0 1px var(--ptd-neon);
  }
  
  .ptd-select {
    width: 100%;
    background-color: var(--ptd-off-white) !important;
    border: 1px solid var(--ptd-border) !important;
    color: var(--ptd-black) !important;
    padding: 16px;
    font-size: 14px;
    font-family: 'Courier New', Courier, monospace;
    border-radius: 0;
    cursor: pointer;
    /* Custom Arrow */
    background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2210%22%20height%3D%226%22%20viewBox%3D%220%200%2010%206%22%20fill%3D%22none%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M1%201L5%205L9%201%22%20stroke%3D%22black%22%20stroke-width%3D%221.5%22%20stroke-linecap%3D%22round%22%20stroke-linejoin%3D%22round%22%2F%3E%3C%2Fsvg%3E");
    background-repeat: no-repeat;
    background-position: right 16px center;
    appearance: none;
  }
  .ptd-select:focus {
    border-color: var(--ptd-neon) !important;
    outline: none;
  }

  /* BUTTON */
  .submit-btn {
    display: block;
    width: 100%;
    background-color: var(--ptd-black);
    color: var(--ptd-white);
    border: 1px solid var(--ptd-black);
    padding: 20px;
    font-size: 13px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 40px;
  }

  .submit-btn:hover {
    background-color: var(--ptd-neon);
    color: var(--ptd-black);
    border-color: var(--ptd-neon);
  }
</style>

<div class="submit-wrapper">
  <div class="submit-container">
    
    <!-- HEADER -->
    <header class="text-center mb-16">
      <h1 class="text-4xl md:text-6xl font-black uppercase tracking-tighter mb-4">
        OPEN A POSITION
      </h1>
      <p class="text-xs font-mono text-[#888] uppercase tracking-widest max-w-md mx-auto leading-relaxed">
        Funding / Collaboration / Cultural Alignment
        <br>
        Fill out the dossier below.
      </p>
    </header>

    <!-- FORM -->
    {% form 'contact' %}
      
      <!-- SUCCESS STATE -->
      {% if form.posted_successfully? %}
        <div class="bg-[#F0FFF0] border border-green-500 p-12 text-center">
          <h2 class="text-xl font-bold uppercase tracking-widest mb-4">Transmission Received</h2>
          <p class="font-mono text-xs opacity-70 mb-8">
            Your pitch has been logged. Stand by for contact.
          </p>
          <a href="/" class="text-xs font-bold uppercase border-b border-black pb-1 hover:text-green-600 hover:border-green-600">
            Return to Home
          </a>
        </div>
        <style>.form-content { display: none; }</style>
      {% endif %}
      
      {% if form.errors %}
        <div class="mb-8 p-4 bg-red-50 border border-red-500 text-red-600 text-center text-xs font-mono">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="form-content">
        
        <!-- 01 IDENTITY -->
        <div class="mb-12">
            <h3 class="section-title">01 // Identity</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="field-group">
                    <label class="field-label" for="Name">Entity Name</label>
                    <input type="text" id="Name" name="contact[name]" class="ptd-input" placeholder="Name or Brand" required>
                </div>
                <div class="field-group">
                    <label class="field-label" for="Email">Email Frequency</label>
                    <input type="email" id="Email" name="contact[email]" class="ptd-input" placeholder="email@address.com" required>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="field-group">
                    <label class="field-label" for="Phone">Phone (Optional)</label>
                    <input type="tel" id="Phone" name="contact[phone]" class="ptd-input" placeholder="+1 ...">
                </div>
                <div class="field-group">
                    <label class="field-label" for="Social">Social Handle</label>
                    <input type="text" id="Social" name="contact[note][Social]" class="ptd-input" placeholder="@instagram">
                </div>
            </div>
        </div>

        <!-- 02 CLASSIFICATION -->
        <div class="mb-12">
            <h3 class="section-title">02 // Classification</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="field-group">
                    <label class="field-label">Interest</label>
                    <select name="contact[note][Interest]" class="ptd-select">
                        <option disabled selected>Select Path...</option>
                        <option value="Verse Capital (Funding)">Verse Capital (Funding)</option>
                        <option value="Brand Collaboration">Brand Collaboration</option>
                        <option value="Studio ZO (Art)">Studio ZØ (Art)</option>
                        <option value="General">General Inquiry</option>
                    </select>
                </div>
                <div class="field-group">
                    <label class="field-label">Category</label>
                    <select name="contact[note][Category]" class="ptd-select">
                        <option disabled selected>Select Category...</option>
                        <option value="Fashion">Fashion / Merch</option>
                        <option value="Music">Music / Audio</option>
                        <option value="Visual Art">Visual Art</option>
                        <option value="Tech">Tech / Protocol</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- 03 THE PITCH -->
        <div class="mb-12">
            <h3 class="section-title">03 // The Pitch</h3>
            <div class="field-group">
                <label class="field-label" for="Pitch">Pitch Your Idea</label>
                <textarea id="Pitch" name="contact[body]" rows="6" class="ptd-input" placeholder="What are you building?"></textarea>
            </div>
            <div class="field-group">
                <label class="field-label" for="Assets">Asset Link (Drive/Dropbox)</label>
                <input type="url" id="Assets" name="contact[note][Assets]" class="ptd-input" placeholder="https://...">
                <p class="text-[10px] text-gray-400 mt-2 font-mono uppercase">
                    * Security Protocol: External links only.
                </p>
            </div>
        </div>

        <button type="submit" class="submit-btn">
            Transmit Application
        </button>

      </div>
    {% endform %}
    
  </div>
</div>