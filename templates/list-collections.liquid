{%- comment -%}
  Shop Page Template (Brands + All Products)
{%- endcomment -%}

{{ 'shop-collections-v2.css' | asset_url | stylesheet_tag }}

<!-- HEADER -->
<section class="shop-page-header">
  <h1>Shop</h1>
  <p>Products by PAY THE DØLLS™ and affiliated brands.</p>
</section>

<div class="container" style="padding-bottom: 8rem;">

  <!-- BRAND HIGHLIGHT (Reduced size) -->
  <div class="shop-by-brand" style="margin-top: 0; margin-bottom: 6rem;">
    <a href="/pages/brands" style="text-decoration:none; color:inherit;">
        <h3 style="margin-bottom: 2rem;">Brands</h3>
    </a>
    
    <div class="brand-focus-card" onclick="window.location.href='/collections/pay-the-dolls'" style="padding: 3rem 2rem;">
      <div style="font-size: 2rem; margin-bottom: 1rem;">Ø</div>
      <h2 style="font-size: 1.5rem;">PAY THE DØLLS™</h2>
      <p class="tagline">Apparel, objects, prints, and limited releases.</p>
    </div>
  </div>

  <!-- ALL PRODUCTS GRID -->
  <div class="all-products-section">
    <h3 class="text-center" style="margin-bottom: 3rem; font-size: 2rem; font-weight: 300;">All Products</h3>
    
    <div class="grid grid--3">
      {%- for product in collections['all'].products limit: 24 -%}
        <a href="{{ product.url }}" class="product-card">
          <div class="product-card__image">
            {%- if product.featured_image != blank -%}
              <img 
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
              >
            {%- else -%}
              <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: #eee;">
                No Image
              </div>
            {%- endif -%}
          </div>
          <div class="product-card__info">
            <h3 class="product-card__title">{{ product.title }}</h3>
            <p class="product-card__price">
              {{ product.price | money }}
            </p>
          </div>
        </a>
      {%- else -%}
        <div class="text-center" style="grid-column: 1 / -1; padding: 4rem 0;">
          <p>No products found in the catalog.</p>
        </div>
      {%- endfor -%}
    </div>
    
     <div style="text-align: center; margin-top: 4rem;">
        <a href="/collections/all" class="btn">View Full Catalog</a>
     </div>

  </div>

  <!-- SUBMIT CTA -->
  <div style="text-align: center; margin-top: 8rem; padding: 4rem 2rem; background: var(--off-white);">
      <p style="font-size: 1.1rem; font-weight: 300; margin-bottom: 2rem;">Interested in printing, producing, or releasing something here?</p>
      <a href="/pages/submit" class="btn" style="border:1px solid #123524; padding: 1rem 2.5rem; text-transform:uppercase; letter-spacing:0.1em; font-weight:600;">Submit an Idea</a>
  </div>

</div>
